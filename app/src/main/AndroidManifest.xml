<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo"
        android:label="The Foodies"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">
        <activity
            android:name=".DetailsActivity"
            android:exported="false" />
        <activity
            android:name=".SignIn.PayOutActivity"
            android:exported="false" />
        <activity
            android:name=".SignIn.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".SignIn.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".SignIn.LocationActivity"
            android:exported="false" />
        <activity
            android:name=".SignIn.StartActivity"
            android:exported="false" />
        <activity
            android:name=".SignIn.SplashScreen"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>